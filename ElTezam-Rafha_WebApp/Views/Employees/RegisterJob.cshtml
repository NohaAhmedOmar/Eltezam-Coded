                <option value="11">ذو القعدة	</option>
                <option value="12">ذو الحجة		</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
       
        <div class="col-lg-4 d-flex flex-row">
            <span style="color:red">*</span><select class="form-control select2Class" id="PositionStatus" name="val-skill" required>
            </select>
        </div>
        <div class="col-lg-4 d-flex flex-row">
